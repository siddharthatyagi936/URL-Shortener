<!DOCTYPE html>
<html lang="en">
<head>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to right, #6a11cb, #2575fc);
      color: #fff;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    h1 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 3em;
    }
    .container {
      background: rgba(255, 255, 255, 0.1);
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
      width: 100%;
      max-width: 800px;
    }
    .table th, .table td {
      text-align: center;
      color: #000;
    }
    .form-label {
      font-weight: bold;
      color: #fff;
    }
    .form-control {
      margin-bottom: 10px;
    }
    .btn-primary {
      background-color: #6a11cb;
      border-color: #6a11cb;
    }
    .btn-primary:hover {
      background-color: #2575fc;
      border-color: #2575fc;
    }
    .scroll-to-top {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background-color: #6a11cb;
      color: #fff;
      border: none;
      border-radius: 50%;
      padding: 10px 15px;
      cursor: pointer;
      font-size: 20px;
      display: none;
      z-index: 100;
    }
    .scroll-to-top:hover {
      background-color: #2575fc;
    }
  </style>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HomePage</title>
</head>
<body>

  <!-- Scroll-to-top button -->
  <button id="scrollBtn" class="scroll-to-top">â†‘</button>

  <div class="container">
    <h1>URL Shortener</h1>

    <!-- If URL is generated -->
    <% if (locals.id) { %>
      <div class="alert alert-success" id="urlGeneratedAlert">
        <p>URL Generated: <a href="http://localhost:8001/url/<%= id %>" target="_blank">http://localhost:8001/url/<%= id %></a></p>
      </div>
    <% } %> 

    <!-- URL form -->
    <div class="mb-4">
      <form method="POST" action="/url">
        <div class="mb-3">
          <label class="form-label">Enter Your Original URL</label> 
          <input type="text" class="form-control" name="url" placeholder="https://example.com" required />
        </div>
        <button type="submit" class="btn btn-primary">Generate</button>
      </form>
    </div>

    <!-- URL Table -->
    <% if (locals.urls) { %>
      <table class="table table-striped table-hover table-dark">
        <thead class="table-light">
          <tr>
            <th>S.No</th>
            <th>ShortID</th>
            <th>Redirect</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= url.shortId %></td>
              <td><a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a></td>
              <td><%= url.visitHistory.length %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Custom JS -->
  <script>
    // Show a notification for URL generation
    window.onload = function() {
      const alertBox = document.getElementById('urlGeneratedAlert');
      if (alertBox) {
        alert("URL Successfully Generated!");
      }
    };

    // Scroll-to-top button functionality
    const scrollBtn = document.getElementById('scrollBtn');
    window.onscroll = function() {
      if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
        scrollBtn.style.display = "block";
      } else {
        scrollBtn.style.display = "none";
      }
    };
    scrollBtn.onclick = function() {
      window.scrollTo({top: 0, behavior: 'smooth'});
    };
  </script>
</body>
</html>
